#!/usr/bin/env groovy


pipeline {
    agent any
    def username = 'Jenkins'

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'Hello Mr. ${username}'
                echo "I said, Hello Mr. ${username}"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
